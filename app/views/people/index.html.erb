<p style="color: green"><%= notice %></p>


<div class="container text-center">
  <h1 class="text-secondary p-3 m-3">Contacts</h1>
  <div>
    <% @people.each do |person| %>
      <div style="margin-bottom: 20px">
        <%= link_to person.first_name, person, :class => "btn card p-3 m-3 bg-light"  %>
      </div>
    <% end %>
    <%= link_to "New contact", new_person_path,:class => "btn btn-primary" %>
  </div>
</div>