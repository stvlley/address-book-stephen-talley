<div class="container text-center">
      <%= form_with model: [@person, @email] do |form| %>
      <p>
        <%= form.label :email %><br>
        <%= form.text_field :email %>
      </p>
      <p>
        <%= form.label :comment %><br>
        <%= form.text_area :comment %>
      </p>
      <p>
        <%= form.submit class: 'btn btn-primary btn-sm' %>
      </p>
    <% end %>
    <%= link_to 'Back', root_path %>
</div>